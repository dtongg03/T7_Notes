<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Quyền để gửi thông báo và quản lý báo thức -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" tools:targetApi="tiramisu"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/task"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomelanderNotes"
        tools:targetApi="31">

        <activity
            android:name=".activities.CreateNoteActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:exported="false" />

        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.TaskListActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.AddTaskActivity"/>
        <activity
            android:name=".activities.DayDetailsActivity"/>
        <activity
            android:name=".activities.TaskDetailActivity" />

        <!-- Khai báo BroadcastReceiver cho báo thức -->
        <receiver android:name=".receivers.TaskAlarmReceiver" />

    </application>
</manifest>
