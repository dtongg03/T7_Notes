<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent color for shadow -->
            <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp"/>
        </shape>
    </item>

    <!-- Main item background layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color of the item -->
            <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp"/>
            <elevation android:radius="4dp"/> <!-- Adjust shadow elevation as needed -->
        </shape>
    </item>
</layer-list>
