<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:dateTextAppearance="@style/CalendarDateText"
        android:focusedMonthDateColor="#FFFFFF"
        android:selectedDateVerticalBar="@color/colorAccent"
        android:selectedWeekBackgroundColor="#333333"
        android:theme="@style/CustomCalendarView"
        android:unfocusedMonthDateColor="#777777"
        android:weekDayTextAppearance="@style/CalendarWeekDayText"
        android:weekSeparatorLineColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageButton
        android:id="@+id/buttonAddTask"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background_circle"
        android:contentDescription="@string/add"
        android:padding="12dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_constraintVertical_bias="0.167"  />
</androidx.constraintlayout.widget.ConstraintLayout>
